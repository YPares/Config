[merge]
  tool = meld
[diff]
  tool = meld
[difftool]
  prompt = false
[mergetool]
  prompt = false
[color]
  ui = true
[alias]
  ls = ls-tree --name-only HEAD
  s = status -s
  st = status -s -uno
  f = fetch
  m = merge
  ci = commit
  cit = commit -uno
  b = branch
  co = checkout
  l = log --decorate
  g = log --graph --decorate --oneline
  gb = log --graph --decorate --oneline --branches
  gr = log --graph --decorate --oneline --remotes
  ga = log --graph --decorate --oneline --all
  logf = log --decorate --name-status
  showf = show --decorate --name-status
  rl = reflog show --decorate
  sb = show-branch
  dt = difftool
  mt = mergetool

