[merge]
  tool = mymeld
  conflictstyle = diff3
  defaultToUpstream = true
[mergetool "mymeld"]
  cmd = meld $LOCAL $BASE $REMOTE -o $MERGED --diff $BASE $LOCAL --diff $BASE $REMOTE --auto-merge
[diff]
  tool = meld
[difftool]
  prompt = false
[mergetool]
  prompt = true
[color]
  ui = true
[push]
  default = upstream
[alias]
  ls = ls-tree --name-only HEAD
  s = status -s -uno
  su = status -s
  cp = cherry-pick
  f = remote update --prune
  p = push
  ff = pull --ff-only
  mf = merge --ff-only
  ci = commit -uno
  ciu = commit
  b = branch
  co = checkout
  st = subtree
  wt = worktree
  sm = submodule
  smu = submodule update --init --recursive
  r = rebase
  l = log --graph --decorate
  l1 = log --decorate --name-status -n1
  lf = log --graph --decorate --name-status
  g = log --graph --pretty=format:'%C(auto)%h%d %s %C(green)%aN'
  gb = log --graph --pretty=format:'%C(auto)%h%d %s %C(green)%aN' --branches
  gr = log --graph --pretty=format:\"%C(auto)%h%d %s %C(green)%aN\" HEAD~~~..HEAD@{u}
  ga = log --graph --pretty=format:'%C(auto)%h%d %s %C(green)%aN' --all
  gu = !sh -c 'git log --graph --pretty=format:\"%C(auto)%h%d %s %C(green)%aN\" HEAD HEAD@{u} --not \"`git merge-base HEAD HEAD@{u}`~\"'
  logme = !sh -c 'git log --decorate --name-status --author=\"`git config user.name`\"'
  showf = show --decorate --name-status
  rl = reflog show --decorate
  sb = show-branch
  d = diff
  dt = difftool
  mt = mergetool
[user]
  name = YPares
  email = yves.pares@gmail.com
[grep]
	lineNumber = true
